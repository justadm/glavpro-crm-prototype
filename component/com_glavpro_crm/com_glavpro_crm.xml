<?xml version="1.0" encoding="utf-8"?>
<extension type="component" method="upgrade" element="com_glavpro_crm">
    <name>com_glavpro_crm</name>
    <author>Glavpro</author>
    <version>0.2.5</version>
    <description>Прототип CRM-воронки (стадии + события)</description>

    <namespace path="src">Glavpro\Component\GlavproCrm</namespace>

    <files folder="site">
        <folder>src</folder>
        <folder>tmpl</folder>
    </files>

    <administration>
        <menu>Glavpro CRM</menu>
        <files folder="admin">
            <filename>config.json</filename>
            <filename>config.xml</filename>
            <filename>menu.xml</filename>
            <filename>router.php</filename>
            <folder>src</folder>
            <folder>tmpl</folder>
            <folder>sql</folder>
            <folder>services</folder>
        </files>
    </administration>

    <install>
        <sql>
            <file driver="mysqli" charset="utf8mb4">sql/install.mysql.utf8mb4.sql</file>
        </sql>
    </install>
</extension>
